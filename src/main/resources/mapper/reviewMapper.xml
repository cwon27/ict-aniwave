<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ict.finalproject.DAO.StoreDAO">


<!-- 제품 ID로 리뷰 리스트를 가져오는 쿼리 -->
    <select id="getReviewsByProductId" resultType="com.ict.finalproject.vo.ReviewVO">
        select * from t_review where orderList_idx = #{productId} and delState = 0
    </select>

    <!-- 제품 ID로 평균 별점을 계산하는 쿼리 -->
    <select id="getAverageRatingByProductId" resultType="double">
        select AVG(grade) from t_review where orderList_idx = #{productId} AND delState = 0
    </select>



</mapper>